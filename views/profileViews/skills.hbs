<div id="profile-nav-bar">
    {{> profileNavBar}}
    {{> profileLoginNavBar}}
</div>


<div class="profile-right-block">
<div class="skills-block">

    <ul>
        {{#each user.skills}}
        <li>
            <p>{{this.name}}</p>
            <p>{{this.level}}</p>
            <p>{{this.category}}</p>
            <a href="skills/delete/{{this._id}}">Delete</a>
            <a href="skills/edit/{{this._id}}">Edit</a>
        </li>
        {{/each}}
    </ul>


    {{#unless user.skills}}
    <p>No skills yet?</p>
    {{/unless}}
    <p>Add your skills to join the community!</p>
    <a href="skills/create">Add skill</a>
</div>
</div>

