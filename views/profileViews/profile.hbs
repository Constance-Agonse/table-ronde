                <label for="select-status"></label>
                <select id="select-status" name="exchangeStatus">
                    <option value=""></option>
                    <option value=""></option>
                </select>
                <button>Update</button>
                </form> --}}
            <p class="Status">Status : {{this.exchangeStatus}} </p>
            
            <button class="lesson-approved"><a href="/profile/approve/lessongiven/{{this._id}}">Approve this leson</a></button>
            <button class="cancel"><a href="/profile/cancel/lessongiven/{{this._id}}">Cancel lesson</a></button>
            {{/each}}
        </div>
    </div>
    
    </div>
</div>